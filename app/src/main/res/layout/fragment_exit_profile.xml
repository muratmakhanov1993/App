<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bt_style">

    <View
        android:layout_width="60sp"
        android:layout_height="8dp"
        android:background="@color/teal_700"
        android:layout_gravity="center|top"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выйти"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/muller_medium"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/muller_medium"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:text="Вы уверены что хотите \n выйти из аккаунта?"
        android:layout_gravity="center"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_out"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выйти"
        android:fontFamily="@font/muller_medium"
        android:textSize="20sp"
        android:textColor="#FD4242"
        android:textAllCaps="false"
        android:background="@drawable/main_bt_bg2"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn_bg"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        android:text="Отмена"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:fontFamily="@font/muller_medium"
        />






</LinearLayout>